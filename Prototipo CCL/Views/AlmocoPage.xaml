<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototipo_CCL.Views.AlmocoPage"
             Title="Registros de Almoço">

    <ContentPage.Resources>
        <Style x:Key="TitleLabel" TargetType="Label">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="TextColor" Value="#333" />
            <Setter Property="HorizontalOptions" Value="Center" />
        </Style>

        <Style x:Key="BodyLabel" TargetType="Label">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="TextColor" Value="#666" />
            <Setter Property="HorizontalOptions" Value="Center" />
        </Style>
    </ContentPage.Resources>

    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20" Padding="20">

        <!-- Ícone de almoço usando FontAwesome ou fonte personalizada -->
        <Image WidthRequest="100" HeightRequest="100">
            <Image.Source>
                <FontImageSource Glyph="&#xf2e7;" 
                                 FontFamily="FontAwesome" 
                                 Size="100" 
                                 Color="#2EB2E6" />
            </Image.Source>
        </Image>

        <!-- Título -->
        <Label Text="Registros de Almoço"
               Style="{StaticResource TitleLabel}" />

        <!-- Subtítulo -->
        <Label Text="Esta página está em construção."
               Style="{StaticResource BodyLabel}" />

    </VerticalStackLayout>
</ContentPage>
